---
import BaseLayout from '../layouts/BaseLayout.astro'
import { SITE_BASE } from '../consts'
import { Icon } from 'astro-icon/components'
import BlogCard from '../components/BlogCard.astro'
import { getCollection } from 'astro:content'
import { createReader } from '@keystatic/core/reader'
import keystaticConfig from '../../keystatic.config'

const reader = createReader(process.cwd(), keystaticConfig)

const posts = (await getCollection('blog'))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 4)

const homeData = await reader.singletons.home.read()
const socialData = await reader.singletons.social.read()

// Fallback to defaults if data not yet configured
const home = homeData || {
	welcomeText: 'Welcome to',
	heading: 'Saral Theme',
	subheading: 'A simple theme for personal blog sites, created for Astro framework.',
	recentPostsTitle: 'Recent Posts',
	aboutTitle: 'About Me',
	aboutText: 'A brief introduction about yourself. You can include your profession, hobbies, interests, or anything you\'d like visitors to know about you.',
	contactTitle: 'Get in touch',
	contactText: 'Use the buttons below for my resume & email.',
	emailAddress: 'example@email.com',
	resumeUrl: 'https://example.com',
}

const socialLinks = socialData?.links || []
---

<BaseLayout>
	<main
		class="app-container flex flex-col gap-12 justify-center py-36 md:py-48 pt-44 md:pt-56 relative"
	>
		<div>
			<p class="block text-3xl opacity-70 mt-9 mb-4">{home.welcomeText}</p>
			<h1 class="text-8xl font-bold leading-none">{home.heading}</h1>
		</div>
		<p class="text-2xl max-w-2xl font-light leading-normal">
			{home.subheading}
		</p>
		<div class="flex flex-wrap gap-8">
			{
				socialLinks.map((link) => (
					<a
						class="text-xl text-primary dark:text-primary-dark underline hover:underline underline-offset-4"
						href={link.url}
						target="_blank"
					>
						{link.name}
					</a>
				))
			}
		</div>
	</main>

	<!-- Recent Posts Section -->
	<section class="app-container">
		<h2 class="section-title">{home.recentPostsTitle}</h2>
		<div class="posts-grid-container">
			{posts.map((post) => <BlogCard post={post} />)}
		</div>
		<a class="btn-secondary" href={`${SITE_BASE}/blog`}
			>Read All
			<Icon size={20} name="mdi:arrow-right" />
		</a>
	</section>

	<!-- About & Contact Section -->
	<section class="app-container py-42 grid lg:grid-cols-2 gap-28 lg:gap-10">
		<div class="space-y-6">
			<h2 class="section-title">{home.aboutTitle}</h2>
			<p class="text-lg max-w-xl pb-4">
				{home.aboutText}
			</p>
			<a class="btn-secondary" href={`${SITE_BASE}/about`}
				>Go to About
				<Icon size={20} name="mdi:arrow-right" />
			</a>
		</div>
		<div class="space-y-6">
			<h2 class="section-title">{home.contactTitle}</h2>
			<p class="text-lg max-w-xl">
				{home.contactText}
			</p>
			<div class="flex flex-wrap mt-auto space-x-4">
				<a
					class="btn-primary"
					href={`mailto:${home.emailAddress}`}
					download
					target="_blank"
					>Get in touch
					<Icon height={20} name="mdi:email" />
				</a>
				<a class="btn-secondary" href={home.resumeUrl} target="_blank"
					>Download Resume
					<Icon height={20} name="mdi:arrow-collapse-down" />
				</a>
			</div>
		</div>
	</section>
</BaseLayout>
