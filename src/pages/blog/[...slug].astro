---
import { type CollectionEntry, getCollection } from 'astro:content'
import BlogPostLayout from '../../layouts/BlogPostLayout.astro'
import type { MarkdownHeading } from 'astro'
import getReadingTime from 'reading-time'

export const prerender = true

export async function getStaticPaths() {
	const posts = await getCollection('blog', ({ data }) => {
		// Only include public and unlisted posts in static paths
		// Private posts won't be accessible
		return data.visibility === 'public' || data.visibility === 'unlisted'
	})
	const headings = await Promise.all(
		posts.map(async (post) => {
			const data = await post.render()
			return data.headings
		})
	)
	return posts.map((post, index) => ({
		params: { slug: post.slug },
		props: { post, headings: headings[index], slug: post.slug },
	}))
}

type Props = {
	post: CollectionEntry<'blog'>
	headings: MarkdownHeading[]
	slug: string
}

const { post, headings, slug } = Astro.props
const { Content, remarkPluginFrontmatter } = await post.render()

// Calculate reading time from the post body
const readingTime = getReadingTime(post.body)
const minutesRead = readingTime.text
---

<BlogPostLayout
	{...post.data}
	headings={headings}
	slug={slug}
	remarkPluginFrontmatter={{ ...remarkPluginFrontmatter, minutesRead }}
>
	<Content />
</BlogPostLayout>
