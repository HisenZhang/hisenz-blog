---
import BaseHead from '../components/BaseHead.astro'
import Navbar from '../components/Navbar.astro'
import Footer from '../components/Footer.astro'
import { SITE_TITLE } from '../consts'
import { createReader } from '@keystatic/core/reader'
import keystaticConfig from '../../keystatic.config'

interface Props {
	title?: string
	description?: string
	useMathJax?: boolean
}

const { title, description, useMathJax } = Astro.props

const reader = createReader(process.cwd(), keystaticConfig)
const seoData = await reader.singletons.seo.read()

// Fallback to defaults if SEO data not configured
const defaultTitle = seoData?.siteTitle || SITE_TITLE
const defaultDescription = seoData?.siteDescription || 'A simple theme for personal blog sites'

import '@fontsource-variable/inter'
import '@fontsource-variable/jetbrains-mono'
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead
			title={title || defaultTitle}
			description={description || defaultDescription}
			useMathJax={useMathJax}
		/>
	</head>
	<body
		class="text-foreground bg-background font-light dark:text-foreground-dark dark:bg-background-dark transition-colors"
	>
		<Navbar title={defaultTitle} />
		<slot />
		<Footer />
	</body>
</html>
